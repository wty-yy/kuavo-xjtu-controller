<?xml version="1.0" ?>

<launch>
    <!-- visualization config -->
    <arg name="rviz"               default="true" />
    <arg name="description_name"   default="humanoid_description"/>
    <arg name="multiplot"          default="false"/>

    <!-- The task file for the mpc. -->
    <arg name="taskFile"          default="$(find humanoid_interface)/config/mpc/task.info"/>
    <arg name="dynamicQrFile"     default="$(find humanoid_interface)/config/mpc/dynamic_qr.info"/>
    <!-- The reference related config file of the robot -->
    <arg name="referenceFile"     default="$(find humanoid_interface)/config/command/reference.info"/>
    <!-- The URDF model of the robot -->
    <!-- <arg name="urdfFile"          default="$(find humanoid_interface_ros)/urdf/kuavo/urdf/biped_s3.urdf"/> -->
    <!-- 8 contact points -->
    <!-- <arg name="urdfFile"          default="$(find humanoid_interface_ros)/urdf/kuavo/urdf/biped_s3_8cp.urdf"/> -->
    <arg name="urdfFile"          default="$(find biped_s3)/urdf/biped_s3.urdf"/>
    <!-- The file defining gait definition -->
    <arg name="gaitCommandFile"   default="$(find humanoid_interface)/config/command/gait.info"/>

    <!-- rviz -->
    <group if="$(arg rviz)">
      <param name="$(arg description_name)" textfile="$(arg urdfFile)"/>
      <arg name="rvizconfig" default="$(find humanoid_interface_ros)/rviz/humanoid.rviz" />
      <node pkg="rviz" type="rviz" name="rviz" args="-d $(arg rvizconfig)" output="screen" />
    </group>

    <!-- multiplot -->
    <group if="$(arg multiplot)">
      <include file="$(find humanoid_interface_ros)/launch/multiplot.launch"/>
    </group>

    <!-- make the files into global parameters -->
    <param name="multiplot"         value="$(arg multiplot)"/>
    <param name="taskFile"          value="$(arg taskFile)" />
    <param name="referenceFile"     value="$(arg referenceFile)" />
    <param name="urdfFile"          value="$(arg urdfFile)" />
    <param name="gaitCommandFile"   value="$(arg gaitCommandFile)"/>
    <param name="dynamicQrFile"     value="$(arg dynamicQrFile)"/>

    <node pkg="humanoid_interface_ros" type="humanoid_ddp_mpc" name="humanoid_ddp_mpc" output="screen" launch-prefix=""/>

    <node pkg="humanoid_interface_ros" type="humanoid_dummy" name="humanoid_dummy"
              output="screen" launch-prefix=""/>

    <!-- joy control -->
    <node pkg="joy" type="joy_node" name="joy_node" output="screen"/>

    <!-- <node pkg="humanoid_interface_ros" type="humanoid_joy_control" name="humanoid_joy_control" output="screen"/> -->
    <node pkg="humanoid_interface_ros" type="humanoid_joy_control_auto_gait" name="humanoid_joy_control_auto_gait" output="screen"/>

</launch>
