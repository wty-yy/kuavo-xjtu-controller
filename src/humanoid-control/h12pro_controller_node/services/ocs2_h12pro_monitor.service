[Unit]
Description=H12PRO Remote Controller Service with Monitor
After=network.target

[Service]
Type=simple
ExecStop=/bin/kill -SIGINT $MAINPID
Environment=KUAVO_ROS_CONTROL_WS_PATH=/home/lab/kuavo-ros-control
Environment=ROBOT_VERSION=42
Environment=NODE_SCRIPT=/home/lab/kuavo-ros-control/src/humanoid-control/h12pro_controller_node/scripts/start_ocs2_h12pro_node.sh
ExecStart=/home/lab/kuavo-ros-control/src/humanoid-control/h12pro_controller_node/scripts/monitor_ocs2_h12pro.sh
Restart=always
RestartSec=5s
User=root

[Install]
WantedBy=multi-user.target